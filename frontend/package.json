{
  "name": "ris-norms-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preserve": "vite build",
    "serve": "vite preview",
    "clean": "rm -rf dist/",
    "test": "vitest",
    "test:e2e": "playwright test --config=test/e2e/playwright.config.ts",
    "test:a11y": "playwright test --config=test/a11y/playwright.config.ts",
    "coverage": "vitest run --coverage",
    "lint:check": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "style:check": "npm run format:check && npm run lint:check",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "audit:licences": "license-checker --production --excludePrivatePackages --onlyAllow ''",
    "check": "tsc --noEmit && npm run style:check && npm test && npm run test:e2e && npm run test:a11y"
  },
  "devDependencies": {
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.39.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/vue": "^8.0.1",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vitest/coverage-v8": "^1.2.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "autoprefixer": "^10.4.16",
    "axe-playwright": "^1.2.3",
    "eslint": "^8.52.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-playwright": "^0.18.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-testing-library": "^6.1.0",
    "eslint-plugin-vue": "^9.20.1",
    "eslint-plugin-vue-scoped-css": "^2.7.0",
    "eslint-plugin-vuejs-accessibility": "^2.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "license-checker": "^25.0.1",
    "playwright": "^1.39.0",
    "prettier": "3.0.3",
    "prettier-plugin-sh": "^0.13.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.11",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "vue": "^3.4.14",
    "vue-router": "^4.2.5"
  }
}