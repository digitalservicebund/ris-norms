{
  "name": "ris-norms-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "coverage": "TZ=UTC vitest run --coverage",
    "test": "TZ=UTC vitest run",
    "test:watch": "TZ=UTC vitest",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "eslint:check": "eslint --ext .js,.ts,.vue --ignore-path .gitignore --max-warnings 0 .",
    "eslint:fix": "npm run eslint:check -- --fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write --ignore-unknown .",
    "style:check": "npm run prettier:check && npm run eslint:check",
    "style:fix": "npm run prettier:fix && npm run eslint:fix",
    "test:a11y": "playwright test --project=a11y",
    "test:e2e": "playwright test",
    "histoire": "histoire dev",
    "audit:licences": "license-checker --production --excludePrivatePackages --onlyAllow \"$(. ./parseAllowedLicences.sh)\" --csv --out ./licence-report.csv"
  },
  "engines": {
    "node": "20.14.0",
    "npm": "10.8.1"
  },
  "dependencies": {
    "@codemirror/lang-xml": "^6.1.0",
    "@vueuse/core": "^10.10.0",
    "codemirror": "^6.0.1",
    "dayjs": "^1.11.10",
    "immer": "^10.1.1",
    "maska": "^2.1.11",
    "ofetch": "^1.3.4",
    "pinia": "^2.1.7",
    "vue": "~3.4.24",
    "vue-router": "~4.3.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "~4.9.0",
    "@digitalservice4germany/angie": "~1.1.1",
    "@digitalservice4germany/style-dictionary": "~2.0.0",
    "@histoire/plugin-vue": "~0.17.17",
    "@iconify-json/ic": "~1.1.17",
    "@pinia/testing": "^0.1.3",
    "@playwright/test": "~1.44.0",
    "@testing-library/jest-dom": "~6.4.0",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/vue": "~8.1.0",
    "@typescript-eslint/eslint-plugin": "~7.13.0",
    "@typescript-eslint/parser": "~7.13.0",
    "@vitejs/plugin-vue": "~5.0.3",
    "@vitest/coverage-v8": "~1.6.0",
    "@vue/eslint-config-prettier": "~9.0.0",
    "@vue/eslint-config-typescript": "~13.0.0",
    "autoprefixer": "~10.4.19",
    "axe-playwright": "~2.0.1",
    "dotenv": "^16.4.5",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-import": "~2.29.1",
    "eslint-plugin-playwright": "~1.6.0",
    "eslint-plugin-prettier": "~5.1.3",
    "eslint-plugin-testing-library": "~6.2.2",
    "eslint-plugin-vue": "~9.26.0",
    "eslint-plugin-vue-scoped-css": "~2.8.0",
    "eslint-plugin-vuejs-accessibility": "~2.3.0",
    "histoire": "~0.17.9",
    "jsdom": "~24.1.0",
    "license-checker": "~25.0.1",
    "playwright": "~1.44.0",
    "postcss": "~8.4.38",
    "prettier": "~3.3.0",
    "prettier-plugin-tailwindcss": "~0.6.0",
    "tailwindcss": "~3.4.3",
    "typescript": "~5.4.5",
    "unplugin-icons": "~0.19.0",
    "vite": "~5.3.0",
    "vitest": "~1.6.0",
    "vue-tsc": "~2.0.14",
    "xpath": "^0.0.34"
  }
}
