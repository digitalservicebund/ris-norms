{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard" // not have a GitHub issue listing the open updates
  ],
  "timezone": "Europe/Berlin",
  "automergeSchedule": [ "before 5:30am every weekday",
        "after 7:30am every weekday"], // branches are created, but not merged outside this schedule
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "ignoreDeps": ["io.spring.dependency-management", "org.springframework.boot"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "patch",
        "pin",
        "pinDigest",
        "digest"
      ],
      "automerge": true,
      "platformAutomerge": false, // this would require more repository setup; also it interferes with automergeSchedule
      "automergeType": "branch" // only create PRs if tests fail (or stall)
    }
  ]
}
