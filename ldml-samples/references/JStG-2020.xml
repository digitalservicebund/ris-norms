        <akn:body GUID="0B4A8E1F-65EF-4B7C-9E22-E83BA6B73CD8" eId="hauptteil-1">
            <!-- Artikel 1 : Hauptänderung -->
            <akn:article GUID="cdbfc728-a070-42d9-ba2f-357945afef06" eId="hauptteil-1_art-1" period="#geltungszeitgr-1"
                         refersTo="hauptaenderung">
                <akn:num GUID="25a9acae-7463-4490-bc3f-8258b629d7e9" eId="hauptteil-1_art-1_bezeichnung-1">
                    <akn:marker GUID="81c9c481-9427-4f03-9f51-099aa9b2201e"
                                eId="hauptteil-1_art-1_bezeichnung-1_zaehlbez-1" name="1"/>Artikel 9
                </akn:num>
                <akn:heading GUID="92827aa8-8118-4207-9f93-589345f0bab6" eId="hauptteil-1_art-1_überschrift-1">Weitere
                    Änderung des Finanzverwaltungsgesetzes
                </akn:heading>
                <!-- Absatz (1) -->
                <akn:paragraph GUID="48ead358-f901-41d3-a135-e372d5ef97b1" eId="hauptteil-1_art-1_abs-1">
                    <akn:num GUID="ef3a32d2-df20-4978-914b-cd6288872208" eId="hauptteil-1_art-1_abs-1_bezeichnung-1">
                        <akn:marker GUID="eab5a7e7-b649-4c23-b495-648b8ec71843"
                                    eId="hauptteil-1_art-1_abs-1_bezeichnung-1_zaehlbez-1" name="1"/>
                    </akn:num>
                    <akn:list GUID="41675622-ed62-46e3-869f-94d99908b010" eId="hauptteil-1_art-1_abs-1_untergl-1">
                        <akn:intro GUID="5d6fc824-7926-43b4-b243-b0096da183f9"
                                   eId="hauptteil-1_art-1_abs-1_untergl-1_intro-1">
                            <akn:p GUID="04879ca1-994b-4eb2-b59b-032e528d9ce5"
                                   eId="hauptteil-1_art-1_abs-1_untergl-1_intro-1_text-1">§ 5 Absatz 1 Satz 1 des
                                Finanzverwaltungsgesetzes, das zuletzt durch Artikel 18 dieses Gesetzes geändert worden
                                ist, wird wie folgt geändert:
                            </akn:p>
                        </akn:intro>
                        <!-- Nummer 1 wurde entfernt -->
                        <!-- Nummer 2 -->
                        <akn:point GUID="b5fa1383-f26a-4904-a638-f48711fbcf2d"
                                   eId="hauptteil-1_art-1_abs-1_untergl-1_listenelem-2">
                            <akn:num GUID="6f0f92b3-1a51-440c-9137-b44ab9d990ac"
                                     eId="hauptteil-1_art-1_abs-1_untergl-1_listenelem-2_bezeichnung-1">
                                <akn:marker GUID="5d7d54f0-8a4e-4d8f-b5d0-93d0ca393e82"
                                            eId="hauptteil-1_art-1_abs-1_untergl-1_listenelem-2_bezeichnung-1_zaehlbez-1"
                                            name="2"/>2.
                            </akn:num>
                            <akn:content GUID="6cb14ab5-3a7f-45f4-9e85-00ac2fb0fe5e"
                                         eId="hauptteil-1_art-1_abs-1_untergl-1_listenelem-2_inhalt-1">
                                <akn:p GUID="db3fbe0f-b758-4cc4-b528-a723cacad94a"
                                       eId="hauptteil-1_art-1_abs-1_untergl-1_listenelem-2_inhalt-1_text-1">
                                    <akn:mod GUID="148c2f06-6e33-4af8-9f4a-3da67c888510"
                                             eId="hauptteil-1_art-1_abs-1_untergl-1_listenelem-2_inhalt-1_text-1_ändbefehl-1"
                                             refersTo="aenderungsbefehl-ersetzen">
                                        Die Nummern 40 und 41 werden wie folgt gefasst:
                                        <akn:quotedStructure GUID="b2fbc227-6aa8-49bc-8d07-e1004f2cd25e"
                                                             eId="hauptteil-1_para-1_abs-1_untergl-1_listenelem-5_untergl-1_listenelem-c_inhalt-1_text-1_ändbefehl-1_quotstruct-1"
                                                             endQuote="“" startQuote="„">

                                            <akn:point GUID="5b9b2a46-f9a9-4b29-885b-aef6a75e4474"
                                                       eId="hauptteil-1_para-1_abs-1_untergl-1_listenelem-5_untergl-1_listenelem-c_inhalt-1_text-1_ändbefehl-1_quotstruct-1_listenelem-2">
                                                <akn:num GUID="2e8c1cc6-5a17-48d9-b084-23d7691d4391"
                                                         eId="hauptteil-1_para-1_abs-1_untergl-1_listenelem-5_untergl-1_listenelem-c_inhalt-1_text-1_ändbefehl-1_quotstruct-1_listenelem-2_bezeichnung-1">
                                                    <akn:marker GUID="83c24d77-eb17-4bf4-970d-22f85d3ee592"
                                                                eId="hauptteil-1_para-1_abs-1_untergl-1_listenelem-5_untergl-1_listenelem-c_inhalt-1_text-1_ändbefehl-1_quotstruct-1_listenelem-2_bezeichnung-1_zaehlbez-1"
                                                                name="2"/>
                                                    40.
                                                </akn:num>
                                                <akn:p GUID="64182da3-fa83-4e3d-896d-7085fdd555c1"
                                                       eId="hauptteil-1_para-1_abs-1_untergl-1_listenelem-5_untergl-1_listenelem-c_inhalt-1_text-1_ändbefehl-1_quotstruct-1_listenelem-2_untergl-1_intro-1_text-1">
                                                    für vor dem 1. Juli 2021 ausgeführte Umsätze die mit der
                                                    Durchführung des Besteuerungsverfahrens nach <akn:ref
                                                        bezugsnorm-automated="true"
                                                        bezugsnorm="UStG §18 Abs. 4e" eId="ref-0-3903743997032909"
                                                        href="eli/bund/bgbl-1/0001/1/0001-01-01/1/deu/regelungstext-1"
                                                        type="Zitierung">§ 18 Absatz 4e des Umsatzsteuergesetzes
                                                </akn:ref> in Zusammenhang stehenden Tätigkeiten auf Grund der <akn:ref
                                                        bezugsnorm-automated="true"
                                                        bezugsnorm="Nr. 904/2010 Kapitel V und XI Abschnitt 2"
                                                        eId="ref-0-8628175946024446"
                                                        fassung="ABl. L 268 vom 12.10.2010, S. 1"
                                                        href="eli/bund/bgbl-1/0001/1/0001-01-01/1/deu/regelungstext-1"
                                                        type="Zitierung">Kapitel V und XI Abschnitt 2 der Verordnung
                                                    (EU) Nr. 904/2010 des Rates vom 7. Oktober 2010 über die
                                                    Zusammenarbeit der Verwaltungsbehörden und die Betrugsbekämpfung auf
                                                    dem Gebiet der Mehrwertsteuer (ABl. L 268 vom 12.10.2010, S. 1)
                                                </akn:ref> und die Entgegennahme und Weiterleitung von Anzeigen und
                                                    Umsatzsteuererklärungen für im Inland ansässige Unternehmer in
                                                    Anwendung der <akn:ref bezugsnorm-automated="true"
                                                        bezugsnorm="2006/112/EG Artikel 369c bis 369i"
                                                        eId="ref-0-7098456735887713"
                                                        fassung="ABl. L 44 vom 20.2.2008, S. 11"
                                                        href="eli/bund/bgbl-1/0001/1/0001-01-01/1/deu/regelungstext-1"
                                                        type="Zitierung">Artikel 369c bis 369i der Richtlinie
                                                    2006/112/EG des Rates in der Fassung des Artikels 5 Nummer 15 der
                                                    Richtlinie 2008/8/EG des Rates vom 12. Februar 2008 zur Änderung der
                                                    Richtlinie 2006/112/EG bezüglich des Ortes der Dienstleistung (ABl.
                                                    L 44 vom 20.2.2008, S. 11)
                                                </akn:ref> einschließlich der damit zusammenhängenden Tätigkeiten auf
                                                    Grund von Artikel 17 Absatz 1 Buchstabe d und Artikel 21 Absatz 1
                                                    sowie Kapitel XI Abschnitt 2 der Verordnung (EU) Nr. 904/2010 des
                                                    Rates vom 7. Oktober 2010 über die Zusammenarbeit der
                                                    Verwaltungsbehörden und die Betrugsbekämpfung auf dem Gebiet der
                                                    Mehrwertsteuer (ABl. L 268 vom 12.10.2010, S. 1) sowie für nach dem
                                                    30. Juni 2021 ausgeführte Umsätze die Entgegennahme und
                                                    Weiterleitung von Anzeigen, Umsatzsteuererklärungen und Zahlungen
                                                    von im Inland oder nicht im Gemeinschaftsgebiet ansässigen
                                                    Unternehmern in Anwendung der Artikel 369c bis 369i und 369k der
                                                    Richtlinie 2006/112/EG des Rates in der Fassung von Artikel 1 Nummer
                                                    11 bis 13 der Richtlinie (EU) 2019/1995 des Rates vom 21. November
                                                    2019 zur Änderung der Richtlinie 2006/112/EG des Rates vom 28.
                                                    November 2006 in Bezug auf Vorschriften für Fernverkäufe von
                                                    Gegenständen und bestimmte inländische Lieferungen von Gegenständen
                                                    (ABl. L 310 vom 2.12.2019, S. 1) einschließlich der mit der
                                                    Durchführung des Besteuerungsverfahrens nach <akn:ref
                                                        bezugsnorm-automated="true"
                                                        bezugsnorm="UStG §18j" eId="ref-0-40880590673256045"
                                                        href="eli/bund/bgbl-1/0001/1/0001-01-01/1/deu/regelungstext-1"
                                                        type="Zitierung">§ 18j des Umsatzsteuergesetzes
                                                </akn:ref> zusammenhängenden Tätigkeiten auf Grund der <akn:ref
                                                        bezugsnorm-automated="true"
                                                        bezugsnorm="Nr. 904/2010 Kapitel V und XI Abschnitt 2 und 3"
                                                        eId="ref-0-42430664779644145"
                                                        fassung="ABl. L 348 vom 29.12.2017, S. 1"
                                                        href="eli/bund/bgbl-1/0001/1/0001-01-01/1/deu/regelungstext-1"
                                                        type="Zitierung">Kapitel V und XI Abschnitt 2 und 3 der
                                                    Verordnung (EU) Nr. 904/2010 des Rates in der Fassung von Artikel 1
                                                    der Verordnung (EU) 2017/2454 des Rates vom 5. Dezember 2017 zur
