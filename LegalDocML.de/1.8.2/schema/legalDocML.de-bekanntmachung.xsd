           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://Inhaltsdaten.LegalDocML.de/1.8.2/"
           elementFormDefault="qualified"
           version="LegalDocML.de 1.8.2 (07.08.2025)">
