<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns="http://Inhaltsdaten.LegalDocML.de/1.8/"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://Inhaltsdaten.LegalDocML.de/1.8/"
           elementFormDefault="qualified"
           version="LegalDocML.de 1.8 (08.05.2025)">
<!-- ********************************* Hinweis zur Lizensierung ********************************* -->
