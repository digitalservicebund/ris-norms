{
  "name": "normendokumentation",
  "displayName": "Normendokumentation",
  "publisher": "digitalservicebund",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalservicebund/ris-norms"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/bundle.js",
  "contributes": {
    "commands": [
      {
        "command": "digitalservicebund.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "digitalservicebund.openFilesInLayout",
        "title": "Open in custom Layout"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:extension",
    "compile:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/bundle.js --external:vscode --format=cjs --platform=node",
    "compile:extension:watch": "npm run compile:extension -- --watch",
    "compile:tests": "tsc -p ./",
    "pretest": "npm run compile:extension && npm run compile:tests",
    "test": "node dist/test/runTest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "prettier:check": "f() { prettier --check ${@:-.}; }; f",
    "prettier:fix": "f() { prettier --write ${@:-.}; }; f"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  }
}
