{
  "name": "normendokumentation",
  "displayName": "Normendokumentation",
  "publisher": "digitalservicebund",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalservicebund/ris-norms"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/bundle.js",
  "contributes": {
    "commands": [
      {
        "command": "digitalservicebund.openFilesInLayout",
        "title": "Open in custom Layout"
      },
      {
        "command": "digitalservicebund.openXmlFilesInWebView",
        "title": "Open Files in WebView"
      }
    ]
  },
  "scripts": {
    "vscode:pack": "npm run vscode:prepublish && vsce package",
    "vscode:prepublish": "npm run compile:extension",
    "compile:extension": "esbuild ./src/extension.ts --bundle --outfile=dist/bundle.js --external:vscode --format=cjs --platform=node",
    "compile:extension:watch": "npm run compile:extension -- --watch",
    "compile:tests": "tsc -p ./",
    "pretest": "npm run compile:extension && npm run compile:tests",
    "test": "node dist/test/runTest",
    "coverage": "nyc npm run test",
    "typecheck": "tsc --noEmit",
    "eslint:check": "f() { eslint --max-warnings=0 ${@:-.}; }; f",
    "eslint:fix": "f() { eslint --fix --max-warnings=0 ${@:-.}; }; f",
    "prettier:check": "f() { prettier --check ${@:-.}; }; f",
    "prettier:fix": "f() { prettier --write ${@:-.}; }; f",
    "style:check": "f() { npm run typecheck && npm run prettier:check $@ && npm run eslint:check $@; }; f",
    "style:fix": "f() { npm run prettier:fix $@ && npm run eslint:fix $@; }; f",
    "audit:licences": "license-checker --production --excludePrivatePackages --onlyAllow \"$(. ./parseAllowedLicences.sh)\" --csv --out ./frontend-licence-report.csv"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^10.3.3",
    "license-checker": "^25.0.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  }
}
